---
// 静态图片
import { Image } from "astro:assets";
// 基础 样式
import "./Footer.less";
---
<footer class="vh-footer">
	<main>
		<p>
			<a href="https://github.com/UF4OVER" target="_blank" rel="noopener noreferrer">
				<svg xmlns="http://www.w3.org/2000/svg" width="120" height="20" viewBox="0 0 120 20" role="img" aria-label="HP | UF4OVER Badge">
					<title>HP | UF4OVER Badge</title>
					<defs>
						<!-- 渐变效果 -->
						<linearGradient id="s" x2="0" y2="100%">
							<stop offset="0" stop-color="#bbb" stop-opacity=".1"/>
							<stop offset="1" stop-opacity=".1"/>
						</linearGradient>
						<!-- 圆角裁剪 -->
						<clipPath id="r">
							<rect width="120" height="20" rx="3" fill="#fff"/>
						</clipPath>
					</defs>
					<g clip-path="url(#r)">
						<!-- 左侧区域：背景为深色 -->
						<rect x="0" y="0" width="35" height="20" fill="#555"/>
						<!-- 右侧区域：背景为白色 -->
						<rect x="35" y="0" width="85" height="20" fill="#CCC"/>
						<!-- 渐变覆盖层 -->
						<rect width="120" height="20" fill="url(#s)"/>
					</g>
					<!-- 文本分组，居中对齐 -->
					<g text-anchor="middle" font-family="Verdana, Geneva, DejaVu Sans, sans-serif" font-size="11" dominant-baseline="middle">
						<!-- 左侧文本（白色） -->
						<text x="17.5" y="10" fill="#fff">HP</text>
						<!-- 右侧文本（深色） -->
						<text x="77.5" y="10" fill="#555">UF4OVER</text>
					</g>
				</svg>
			</a>
		</p>
		<p>
			<a href="https://astro.build/" target="_blank" rel="noopener noreferrer">
				<Image width="1" height="1" alt="Astro" src="/assets/images/footer/astro.svg" />
			</a>
			<a href="https://github.com/uxiaohan/vhAstro-Theme" target="_blank" rel="noopener noreferrer">
				<Image width="1" height="1" alt="vhAstro-Theme" src="/assets/images/footer/theme.svg" />
			</a>
		</p>
	</main>
</footer>

